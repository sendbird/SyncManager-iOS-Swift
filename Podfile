# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

use_frameworks!
inhibit_all_warnings!

def common_pods
  
  # Pods for SendBird-iOS
  pod 'SendBirdSyncManager', '~> 1.1.26'
  pod 'RSKImageCropper'
  pod 'NYTPhotoViewer', '~> 1.1.0'
  pod 'FLAnimatedImage', '~> 1.0'
  pod 'Kingfisher', '~> 5.12'
  pod 'SwiftyBeaver'
  pod 'Hero'
end

target 'SendBird-iOS' do
  common_pods
end

target 'SendBird-iOSTests' do
  common_pods
end


